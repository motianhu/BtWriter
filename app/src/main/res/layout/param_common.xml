<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/speedName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/font_15"
            android:textColor="@color/color_333333"
            android:text="@string/cut_speed" />

        <SeekBar
            android:id="@+id/speedBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:progressDrawable="@drawable/seekbar_style"
            android:thumb="@drawable/seekbar_thumb"
            android:layout_toStartOf="@+id/speedValue"
            android:layout_toEndOf="@+id/speedName" />

        <TextView
            android:id="@+id/speedValue"
            android:textSize="@dimen/font_15"
            android:layout_width="@dimen/dimen_40dp"
            android:textColor="@color/color_A6A6A6"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_30dp">

        <TextView
            android:id="@+id/pressureName"
            android:layout_width="wrap_content"
            android:textSize="@dimen/font_15"
            android:textColor="@color/color_333333"
            android:layout_height="wrap_content"
            android:text="@string/knife_press" />

        <SeekBar
            android:id="@+id/pressureBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:progressDrawable="@drawable/seekbar_style"
            android:thumb="@drawable/seekbar_thumb"
            android:layout_toStartOf="@+id/pressureValue"
            android:layout_toEndOf="@+id/pressureName" />

        <TextView
            android:id="@+id/pressureValue"
            android:layout_width="@dimen/dimen_40dp"
            android:layout_height="wrap_content"
            android:textSize="@dimen/font_15"
            android:textColor="@color/color_A6A6A6"
            android:layout_alignParentEnd="true" />
    </RelativeLayout>
</LinearLayout>
