<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_corner_10"
    android:padding="@dimen/dimen_21dp">

    <ImageView
        android:id="@+id/icon"
        android:layout_width="102dp"
        android:layout_marginEnd="@dimen/dimen_20dp"
        android:layout_height="102dp" />

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_2dp"
        android:layout_toEndOf="@+id/icon"
        android:textColor="@color/color_333333"
        android:textSize="@dimen/font_15" />

    <TextView
        android:id="@+id/category"
        android:layout_below="@+id/name"
        android:layout_toEndOf="@+id/icon"
        android:layout_width="wrap_content"
        android:layout_marginTop="@dimen/dimen_10dp"
        android:layout_height="wrap_content"
        android:textColor="@color/color_333333"
        android:textSize="@dimen/font_12" />

    <TextView
        android:id="@+id/number"
        android:layout_below="@id/category"
        android:layout_toEndOf="@+id/icon"
        android:layout_marginTop="@dimen/dimen_10dp"
        android:layout_width="wrap_content"
        android:text="@string/number"
        android:layout_height="wrap_content"
        android:textColor="@color/color_333333"
        android:textSize="@dimen/font_12" />

    <LinearLayout
        android:id="@+id/number_control"
        android:layout_width="wrap_content"
        android:layout_below="@id/category"
        android:layout_marginTop="@dimen/dimen_8dp"
        android:layout_marginStart="@dimen/dimen_10dp"
        android:layout_toEndOf="@+id/number"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dimen_6dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/minus"
            android:layout_width="@dimen/dimen_22dp"
            android:layout_height="@dimen/dimen_22dp"
            android:src="@drawable/minus" />

        <TextView
            android:id="@+id/num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dimen_11dp"
            android:layout_marginEnd="@dimen/dimen_11dp"
            android:gravity="center"
            android:textColor="@color/color_222A37"
            android:textSize="@dimen/font_14" />

        <ImageView
            android:id="@+id/plus"
            android:layout_width="@dimen/dimen_22dp"
            android:layout_height="@dimen/dimen_22dp"
            android:src="@drawable/add" />
    </LinearLayout>

    <TextView
        android:id="@+id/price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_8dp"
        android:layout_toEndOf="@id/icon"
        android:layout_below="@+id/number"
        android:textColor="@color/color_F90300"
        android:textSize="@dimen/font_12" />

    <ImageView
        android:id="@+id/delete"
        android:layout_below="@id/category"
        android:layout_width="wrap_content"
        android:src="@drawable/delete"
        android:layout_alignParentEnd="true"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dimen_5dp" />

</RelativeLayout>
