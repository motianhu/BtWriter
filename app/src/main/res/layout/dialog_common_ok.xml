<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_corner_10"
    android:orientation="vertical"
    android:paddingStart="@dimen/dimen_20dp"
    android:paddingTop="@dimen/dimen_32dp"
    android:paddingEnd="@dimen/dimen_20dp"
    android:paddingBottom="@dimen/dimen_20dp">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/color_main"
        android:textSize="@dimen/font_22" />

    <TextView
        android:id="@+id/tv_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_title"
        android:layout_marginTop="@dimen/dimen_16dp"
        android:layout_marginBottom="@dimen/dimen_30dp"
        android:textColor="@color/color_A4A9AF"
        android:textSize="@dimen/font_16" />

    <TextView
        android:id="@+id/bt_ok"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_content"
        android:layout_marginTop="@dimen/dimen_20dp"
        android:background="@drawable/bg_corner_maincolor"
        android:paddingStart="@dimen/dimen_20dp"
        android:paddingTop="@dimen/dimen_5dp"
        android:paddingEnd="@dimen/dimen_20dp"
        android:paddingBottom="@dimen/dimen_5dp"
        android:textColor="@color/white"
        android:textSize="@dimen/font_18" />

    <TextView
        android:id="@+id/tv_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_content"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="@dimen/dimen_20dp"
        android:background="@drawable/bg_corner_ebebeb"
        android:paddingStart="@dimen/dimen_20dp"
        android:paddingTop="@dimen/dimen_5dp"
        android:paddingEnd="@dimen/dimen_20dp"
        android:paddingBottom="@dimen/dimen_5dp"
        android:textColor="@color/white"
        android:textSize="@dimen/font_18" />
</RelativeLayout>