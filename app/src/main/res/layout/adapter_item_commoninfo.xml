<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_corner_f5f4f9_10"
    android:padding="@dimen/dimen_21dp">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="title"
        android:textColor="@color/color_333333"
        android:textSize="@dimen/font_15" />

    <TextView
        android:id="@+id/speed_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title"
        android:layout_marginTop="@dimen/dimen_10dp"
        android:text="@string/cut_speed1"
        android:textColor="@color/color_333333"
        android:textSize="@dimen/font_12" />

    <TextView
        android:id="@+id/speed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/speed_desc"
        android:layout_marginStart="@dimen/dimen_5dp"
        android:layout_toEndOf="@+id/speed_desc"
        android:text="22"
        android:textColor="@color/color_333333"
        android:textSize="@dimen/font_12" />

    <TextView
        android:id="@+id/press_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/speed"
        android:layout_marginTop="@dimen/dimen_8dp"
        android:text="@string/knife_press1"
        android:textColor="@color/color_333333"
        android:textSize="@dimen/font_12" />

    <TextView
        android:id="@+id/press"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/press_desc"
        android:layout_marginStart="@dimen/dimen_5dp"
        android:layout_toEndOf="@+id/press_desc"
        android:text="21"
        android:textColor="@color/color_333333"
        android:textSize="@dimen/font_12" />

    <TextView
        android:id="@+id/edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/dimen_20dp"
        android:layout_toStartOf="@+id/delete"
        android:drawableStart="@drawable/edit"
        android:drawablePadding="@dimen/dimen_5dp"
        android:text="@string/edit"
        android:textColor="@color/color_333333"
        android:textSize="@dimen/font_12" />

    <TextView
        android:id="@+id/delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:drawableStart="@drawable/delete"
        android:drawablePadding="@dimen/dimen_5dp"
        android:text="@string/delete"
        android:textColor="@color/color_333333"
        android:textSize="@dimen/font_12" />

    <TextView
        android:id="@+id/use"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edit"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="@dimen/dimen_17dp"
        android:layout_marginEnd="@dimen/dimen_20dp"
        android:background="@drawable/bg_corner_maincolor"
        android:paddingStart="@dimen/dimen_25dp"
        android:paddingTop="@dimen/dimen_5dp"
        android:paddingEnd="@dimen/dimen_25dp"
        android:paddingBottom="@dimen/dimen_5dp"
        android:text="@string/use"
        android:textColor="@color/white"
        android:textSize="@dimen/font_13" />
</RelativeLayout>
